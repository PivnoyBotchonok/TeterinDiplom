<Page x:Class="Diplom.Pages.Admin.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <Grid Margin="10">
        <StackPanel>
            <Button Content="Назад" HorizontalAlignment="Left" Click="backBut_Click"/>
            <DataGrid x:Name="ResultDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding User.SName}" Width="1*"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding User.FName}" Width="1*"/>
                    <DataGridTextColumn Header="Отчество" Binding="{Binding User.PName}" Width="1*"/>
                    <DataGridTextColumn Header="Результат" Binding="{Binding Score}" Width="1*"/>
                    <DataGridTextColumn Header="Оценка" Binding="{Binding Grade}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
