<Page x:Class="Diplom.Pages.User.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <!-- Заголовок теста -->
            <Border Padding="10" CornerRadius="5" Background="#EEE">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedTest.Name}" 
                           FontSize="22" FontWeight="Bold" TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding SelectedTest.Description}" 
                           Margin="0 5 0 0" TextWrapping="Wrap" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Список вопросов -->
            <ItemsControl ItemsSource="{Binding SelectedTest.Question}" Margin="0 15 0 0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="0 10" CornerRadius="6" Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1">
                            <StackPanel>
                                <!-- Вопрос -->
                                <TextBlock FontWeight="SemiBold" FontSize="16">
                                <Run Text="Вопрос №"/>
                                <Run Text="{Binding Number}"/>
                                <Run Text=": "/>
                                <Run Text="{Binding Text}"/>
                                </TextBlock>

                                <!-- Ответы -->
                                <ItemsControl ItemsSource="{Binding Answer}" Margin="15 5 0 0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Content="{Binding Text}" 
                                                     Margin="5 2"
                                                     GroupName="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=TemplatedParent.DataContext.Number}"
                                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопка -->
            <Button x:Name="ResultBut"
                Content="Завершить"
                HorizontalAlignment="Center"
                Margin="0 20 0 0"
                Padding="10 5"
                Width="150"
                Click="ResultBut_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
