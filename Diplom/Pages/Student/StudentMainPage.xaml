<Page x:Class="Diplom.Pages.Student.StudentMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplom.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="backBut" Content="Назад" HorizontalAlignment="Left" Margin="5" Click="backBut_Click"/>
        <ScrollViewer Grid.Row="1" HorizontalContentAlignment="Stretch">
            <TabControl >
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Тесты"/>
                    </TabItem.Header>
                    <TabItem.Content>
                        <ListView ItemsSource="{Binding Tests}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" Grid.Column="0"/>
                                        <TextBlock Text="{Binding Status}" Grid.Column="1"/>
                                        <Button Content="Пройти" Grid.Column="2" Click="Button_Click"/>
                                        <Expander Grid.Row="1" Grid.ColumnSpan="4">
                                            <Expander.Header>
                                                <TextBlock Text="Описание"/>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <TextBlock Text="{Binding Description}"/>
                                            </Expander.Content>
                                        </Expander>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </TabItem.Content>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <TextBlock Text="Мои результаты"/>
                    </TabItem.Header>
                    <TabItem.Content>
                        <DataGrid x:Name="MyResult" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тест" Binding="{Binding Test.Name}" Width="1*"/>
                                <DataGridTextColumn Header="Результаты" Width="1*" Binding="{Binding Grade}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </ScrollViewer>
    </Grid>
</Page>
